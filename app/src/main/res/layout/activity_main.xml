<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/Theme.WhenThenDemo.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/Theme.WhenThenDemo.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_centerHorizontal="true"
       android:layout_marginTop="100dp"
       android:orientation="vertical"
       android:id="@+id/btnGroup">

       <Button
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:text="@string/webview_demo"
           android:id="@+id/btn_webview"
           android:textColor="@color/white"
           />

       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_marginTop="20dp"
           android:text="@string/nativeform_demo"
           android:id="@+id/btn_native_form"
           android:textColor="@color/white"
           />
   </LinearLayout>


</RelativeLayout>